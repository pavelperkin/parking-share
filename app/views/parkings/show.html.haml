- if can? :create, :parking_place
  .card
    .card-body
      = render 'parking_places/form', parking_place: ParkingPlace.new
%h2= @parking.name
%ul.list-group
  - @parking.parking_places.each do |place|
    %li.list-group-item
      -if can? :manage, :parking_places
        = render 'parking_places/form', parking_place: place
      -else
        = place.number

%br
= link_to 'Back', parkings_path
